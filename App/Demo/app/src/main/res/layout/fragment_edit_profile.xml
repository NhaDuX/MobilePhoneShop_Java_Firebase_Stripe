<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuFragment.EditProfileFragment">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:background="#FFAEBC"
                        android:id="@+id/layout_EDTProfile">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cvAvatar"
                            android:layout_width="69dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:src="@drawable/user">

                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:id="@+id/tvBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/hotpink"
                            android:clickable="true"
                            android:text="Back"
                            android:textSize="20dp"
                            tools:ignore="TouchTargetSizeCheck"></TextView>

                        <TextView
                            android:id="@+id/tvSave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:backgroundTint="@color/hotpink"
                            android:clickable="true"
                            android:text="Save"
                            android:textSize="20dp"
                            tools:ignore="TouchTargetSizeCheck"></TextView>

                    </FrameLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/vie_bg">

                        <EditText
                            android:id="@+id/edtName"
                            android:layout_width="363dp"
                            android:layout_height="51dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="31dp"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Name"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/edtBirth"
                            android:layout_width="362dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="29dp"
                            android:ems="10"
                            android:inputType="date"
                            android:text="Birthday"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/edtName"
                            tools:ignore="TouchTargetSizeCheck" />

                        <EditText
                            android:id="@+id/editTextTextPersonName3"
                            android:layout_width="362dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="29dp"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Address"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/edtBirth"
                            tools:ignore="TouchTargetSizeCheck" />

                        <EditText
                            android:id="@+id/edtDetails"
                            android:layout_width="362dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="29dp"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Details"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3"
                            tools:ignore="TouchTargetSizeCheck" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
        </FrameLayout>

</LinearLayout>